---
import Header from '../components/header.astro';
import Footer from '../components/Footer.astro';

const { titre } = Astro.props;
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title> {titre} </title>
    </head>
    <body>
        <Header/>
        <main>
            <slot />
        </main>
        <Footer/>
    </body>
</html>

<style>
    html, body {
        margin: 0;
        padding: 0;
    }
    
    main {
        text-align: left;
        padding: 2rem;
    }
    
    main h1 {
        font-size: 3rem;    
        margin-top: 5rem;
        margin-bottom: 2rem;
    }
</style>   